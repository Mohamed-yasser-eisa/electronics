ORG TABLE
		DB 3FH	;0
		DB 06H	;1
		DB 5BH	;2
		DB 4FH	;3
		DB 66H	;4
		DB 6DH	;5
		DB 7DH	;6
		DB 07H	;7
		DB 7FH	;8
		DB 6FH	;9




END